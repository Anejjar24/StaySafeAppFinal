<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche la plus externe (claire) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D9EAFD" /> <!-- Couleur claire -->
        </shape>
    </item>

    <!-- Deuxième cercle -->
    <item
        android:top="20dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="#81BFDA" /> <!-- Couleur moyenne -->
        </shape>
    </item>

    <!-- Troisième cercle -->
    <item
        android:top="40dp"
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="oval">
            <solid android:color="#78B3CE" /> <!-- Couleur sombre -->
        </shape>
    </item>

    <!-- Quatrième cercle -->
    <item
        android:top="50dp"
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="#5A9AB6" /> <!-- Couleur encore plus sombre -->
        </shape>
    </item>

    <!-- Cercle central (le plus sombre) -->
    <item
        android:top="40dp"
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="oval">
            <solid android:color="#3D7A94" /> <!-- Couleur très sombre -->
        </shape>
    </item>
</layer-list>
