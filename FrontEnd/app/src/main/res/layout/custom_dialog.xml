<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/custom_dialog_background">

    <!-- Titre -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir une plateforme"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_3"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Option Facebook -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/blue_sky_medium"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/facebookOption">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook Logo"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partager sur Facebook"
            android:textSize="16sp"
            android:textColor="@color/gray_3" />
    </LinearLayout>

    <!-- Séparation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        android:layout_marginVertical="10dp" />

    <!-- Option Instagram -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/instagramOption">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/instagram"
            android:contentDescription="Instagram Logo"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partager sur Instagram"
            android:textSize="16sp"
            android:textColor="@color/gray_3" />
    </LinearLayout>

    <!-- Séparation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        android:layout_marginVertical="10dp" />

    <!-- Bouton Annuler -->
    <TextView
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:gravity="center"
        android:textSize="16sp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/gray_2"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
